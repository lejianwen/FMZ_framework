{
  "name": "ljw/framework",
  "description": "my framework",
  "keywords": ["framework", "ljw"],
  "type": "project",
  "homepage": "http://github.com/lejianwen/FMZ_framework",
  "license": "MIT",
  "require": {
    "filp/whoops": "2.1.4",
    "monolog/monolog": "1.21.0",
    "illuminate/database": "*",
    "smarty/smarty":"*",
    "ljw/excel": "dev-master",
    "ljw/route": "dev-master",
    "vlucas/phpdotenv": "v2.4.0"
  },
  "autoload": {
    "psr-4": {
      "app\\" : "app/",
      "lib\\" : "lib/"
    },
    "classmap": [
      "bootstrap"
    ],
    "files": ["common/functions.php"]
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
